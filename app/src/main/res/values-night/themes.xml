<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmCircle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Widget.SurfaceToolbar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Text.CardTitleTextAppearance" parent="">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.ToolbarTitleTextAppearance" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FilmCircle.NavigationTitleTextAppearance" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.Text.CardSubtitleTextAppearance" parent="">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.FilmCircle.ShimmerBackground" parent="">
        <item name="android:background">@color/grayNightColor</item>
    </style>
</resources>