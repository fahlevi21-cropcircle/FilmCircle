<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmCircle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Theme.Widget.CustomInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>

    <style name="Theme.FilmCircle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Widget.SurfaceToolbar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextColor">?attr/colorPrimary</item>
        <item name="titleTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Text.CardTitleTextAppearance" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.FilmCircle.NavigationTitleTextAppearance" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryColor</item>
    </style>

    <style name="Theme.Text.ToolbarTitleTextAppearance" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Text.CardSubtitleTextAppearance" parent="">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.FilmCircle.SmallRoundedButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.FilmCircle.SmallButtonShapeOverlay</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FilmCircle.SmallComponent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="Widget.FilmCircle.SmallOutlinedRoundedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.FilmCircle.SmallButtonShapeOverlay</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FilmCircle.SmallComponent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.FilmCircle.SmallButtonShapeOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget.FilmCircle.ShimmerBackground" parent="">
        <item name="android:background">@color/grayLightColor</item>
    </style>

    <style name="ShapeAppearance.FilmCircle.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>