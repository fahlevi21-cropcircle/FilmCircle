<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_slider"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <TextView
            android:id="@+id/loading_home_label_1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loading_home_slider"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:textAppearance="?attr/textAppearanceSubtitle1"/>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_img_vertical_1"
            android:layout_width="134dp"
            android:layout_height="194dp"
            android:layout_margin="16dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_1"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <TextView
            android:id="@+id/loading_home_text_vertical_1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loading_home_img_vertical_1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Theme.Text.CardTitleTextAppearance"/>

        <TextView
            android:id="@+id/loading_home_subtext_vertical_1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loading_home_text_vertical_1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_img_vertical_2"
            android:layout_width="134dp"
            android:layout_height="194dp"
            android:layout_margin="16dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_1"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_1"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <TextView
            android:id="@+id/loading_home_text_vertical_2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/loading_home_img_vertical_1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Theme.Text.CardTitleTextAppearance"/>

        <TextView
            android:id="@+id/loading_home_subtext_vertical_2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_1"
            app:layout_constraintTop_toBottomOf="@id/loading_home_text_vertical_2"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_img_vertical_3"
            android:layout_width="134dp"
            android:layout_height="194dp"
            android:layout_margin="16dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_1"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <TextView
            android:id="@+id/loading_home_text_vertical_3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/loading_home_img_vertical_1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Theme.Text.CardTitleTextAppearance"/>

        <TextView
            android:id="@+id/loading_home_subtext_vertical_3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_2"
            app:layout_constraintTop_toBottomOf="@id/loading_home_text_vertical_3"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_img_vertical_4"
            android:layout_width="134dp"
            android:layout_height="194dp"
            android:layout_margin="16dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_1"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <TextView
            android:id="@+id/loading_home_text_vertical_4"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/loading_home_img_vertical_1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/Theme.Text.CardTitleTextAppearance"/>

        <TextView
            android:id="@+id/loading_home_subtext_vertical_4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            app:layout_constraintStart_toEndOf="@id/loading_home_img_vertical_3"
            app:layout_constraintTop_toBottomOf="@id/loading_home_text_vertical_4"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"/>

        <TextView
            android:id="@+id/loading_home_label_2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/loading_home_subtext_vertical_1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            style="@style/Widget.FilmCircle.ShimmerBackground"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_square_img_1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_2"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:layout_margin="16dp"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_square_img_2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toEndOf="@id/loading_home_square_img_1"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_2"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:layout_margin="16dp"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_square_img_3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toEndOf="@id/loading_home_square_img_2"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_2"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:layout_margin="16dp"
            app:riv_corner_radius="@dimen/shape_radius"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/loading_home_square_img_4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toEndOf="@id/loading_home_square_img_3"
            app:layout_constraintTop_toBottomOf="@id/loading_home_label_2"
            style="@style/Widget.FilmCircle.ShimmerBackground"
            android:layout_margin="16dp"
            app:riv_corner_radius="@dimen/shape_radius"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>