<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.cropcircle.filmcircle.models.movie.Movie" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:loadMediumImage="@{data.backDropPath == null ? data.posterPath : data.backDropPath}"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            android:id="@+id/item_genre_image" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/item_genre_lang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@{data.originalLanguage}"
                android:textAppearance="?attr/textAppearanceCaption" />

            <TextView
                android:id="@+id/item_genre_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_genre_lang"
                android:layout_marginTop="8dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginEnd="16dp"
                android:text="@{data.title == null ? data.originalTitle : data.title}"
                android:textAppearance="?attr/textAppearanceSubtitle2"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <uz.jamshid.library.ExactRatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:starCount="1"
                    app:starValue="1"
                    app:starSize="24"
                    app:starFillColor="?attr/colorPrimary"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_genre_rating"
                    android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"
                    android:text="@{data.voteAverage.toString()}" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</layout>