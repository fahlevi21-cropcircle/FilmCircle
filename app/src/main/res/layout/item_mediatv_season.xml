<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.cropcircle.filmcircle.models.tv.Season" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/item_season_card"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_season_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/business"
            android:layout_marginStart="8dp"
            app:riv_border_width="1dp"
            app:riv_border_color="@color/containerBackground"
            android:scaleType="fitXY"
            android:loadMediumImage="@{data.posterPath}"
            app:riv_corner_radius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/item_season_info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@id/item_season_card"
            app:layout_constraintTop_toTopOf="@id/item_season_card"
            app:layout_constraintStart_toEndOf="@id/item_season_image"
            app:layout_constraintBottom_toBottomOf="@id/item_season_card"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/item_season_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{data.name}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_season_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/Theme.Text.CardSubtitleTextAppearance"/>

            <TextView
                android:id="@+id/item_season_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBody1"/>

            <TextView
                android:id="@+id/item_season_episode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total of 80 Episodes"
                android:layout_marginTop="16dp"
                android:textAppearance="?attr/textAppearanceBody2"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>