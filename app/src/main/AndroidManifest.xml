<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cropcircle.filmcircle">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmCircle">
        <activity android:name=".ui.auth.AuthActivity"
            android:theme="@style/Theme.FilmCircle.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.VideoPlayerActivity" />
        <activity
            android:name=".ui.home.sub.MovieDetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:theme="@style/Theme.FilmCircle.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FilmCircle.NoActionBar">
        </activity>
    </application>

</manifest>